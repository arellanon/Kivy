<MyWidget>:
    orientation: 'vertical'
    FloatLayout:
        id: wid1
        size_hint: 1,.9
        Widget:
            id: bar
            pos_hint: {'center_y': 0.5, 'center_x': 0.5}
            size_hint: None, None
            width: 0
            height: 100
            animated_color: (1, 0, 0)
            canvas:
                Color:
                    rgb: self.animated_color
                Rectangle:
                    size: self.size
                    pos: self.pos
                    
    BoxLayout:
        size_hint: 1,.1
        Button:
            text: "start"
            size: self.size
            pos: self.pos
            on_release: root.animate_it(self)