<MyLayout>
    orientation: 'vertical'
    canvas:
        Color:
            rgb: 1,1,1
        Rectangle:
            size: self.size
            pos: self.pos
            
    BoxLayout:
        id: my_box1
        size_hint: 1,.1
        canvas:
            Color:
                rgb: 1,0,0
            Rectangle:
                size: self.size
                pos: self.pos
    
        Button:
            text: "Press Me!"
            on_press: root.press_it()
            
    BoxLayout:
        id: my_box2
        size_hint: 1,.9
        canvas:
            Color:
                rgb: 0,0,1
            Rectangle:
                size: self.size
                pos: self.pos